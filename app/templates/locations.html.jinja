{% extends "base.html.jinja" %}
{% block content %}
    {% if error %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-heartbreak-fill"></i> <strong>{{error}}</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {% endif %}
    <ul class="list-group">
        {% for location in locations %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a class="nav-link" href="{{url_for('location', location_name=location)}}"><i class="bi bi-door-open-fill"></i>{{location}}</a>
                <span class="badge bg-secondary rounded-pill">{{loop.index}}</span>
            </li>
        {% endfor %}
    </ul>
{% endblock content %}